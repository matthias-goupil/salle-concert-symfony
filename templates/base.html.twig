<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="/styles.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
              crossorigin="anonymous">
        {#            {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {#            {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>
<body>
<nav id="auth_bar">
    {% if is_granted('ROLE_USER') %}
        <p>Bonjour {{ app.user.firstname }}</p>
        <div>
            <a href="{{ path('app_user_liked') }}">Mes groupes favoris</a>
            <a href="{{ path('app_user_profil') }}">Mon profil</a>
            <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% else %}
        <div>
            <a href="{{ path('app_login') }}">Connexion</a>
            <a href="{{ path('app_user_new') }}">Inscription</a>
        </div>

    {% endif %}

</nav>
<header>
    {#            {{ app.user.roles[1] }} #}
    <h1>Salle de concert</h1>
    <nav>
        <a href="{{ path('app') }}">Accueil</a>
        <a href="{{ path('app_concert_hall_index') }}">Les salles</a>
        <a href="{{ path('app_concert_index') }}">Les concerts</a>
        <a href="{{ path('app_artist_index') }}">Les artistes</a>
        <a href="{{ path('app_music_group_index') }}">Les groupes de musiques</a>
    </nav>
</header>
{% block body %}{% endblock %}
<footer>
    {% block footer %}{% endblock %}
</footer>
</body>
</html>
